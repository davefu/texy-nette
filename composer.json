{
    "name": "nepada/texy-nette",
    "type": "library",
    "license": "BSD-3-Clause",
    "description": "Texy integration for Nette.",
    "keywords": ["nette", "latte", "texy"],
    "support": {
        "email": "petr@pada.cz",
        "issues": "https://github.com/nepada/template-factory/issues"
    },
    "authors": [
        {
            "name": "Petr MorÃ¡vek",
            "email": "petr@pada.cz"
        }
    ],
    "require": {
        "php": ">= 5.6.0",
        "nette/utils": "^2.2@dev",
        "texy/texy": "^2.8@dev"
    },
    "require-dev": {
        "nette/tester": "^1.6",
        "nette/bootstrap": "^2.3@dev",
        "nette/di": "^2.3@dev",
        "nette/application": "^2.3@dev",
        "nette/http": "^2.3@dev",
        "latte/latte": "^2.2@dev",
        "tracy/tracy": "^2.3@dev",
        "nepada/template-factory": "^1.0@dev",

        "nette/neon": "^2.2@dev",
        "nette/php-generator": "^2.2@dev",
        "nette/component-model": "^2.2@dev",
        "nette/reflection": "^2.2@dev",
        "nette/caching": "^2.2@dev",
        "nette/finder": "^2.2@dev"
    },
    "suggest": {
        "nette/di": "for integration with Nette DI container",
        "latte/latte": "to use Latte with custom Texy! macros in templates",
        "nepada/template-factory": "to automatically inject required services into Latte templates"
    },
    "autoload": {
        "psr-4": {
            "Nepada\\Bridges\\": "src/Bridges/",
            "Nepada\\Texy\\": "src/Texy/"
        },
        "classmap": [
            "src/Texy/exceptions.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
