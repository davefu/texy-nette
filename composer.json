{
    "name": "nepada/texy-nette",
    "type": "library",
    "license": "BSD-3-Clause",
    "description": "Texy integration for Nette.",
    "keywords": ["nette", "latte", "texy"],
    "support": {
        "email": "petr@pada.cz",
        "issues": "https://github.com/nepada/template-factory/issues"
    },
    "authors": [
        {
            "name": "Petr MorÃ¡vek",
            "email": "petr@pada.cz"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "nette/utils": "^2.4@dev || ^3.0@dev",
        "texy/texy": "^2.8@dev"
    },
    "conflict": {
        "latte/latte": "<2.4"
    },
    "require-dev": {
        "nette/tester": "^1.7",
        "jakub-onderka/php-parallel-lint": "^0.9",
        "nepada/coding-standard": "^4.0.0",
        "nette/bootstrap": "^2.4.1@dev || ^3.0@dev",
        "nette/di": "^2.4.7@dev || ^3.0@dev",
        "latte/latte": "^2.4@dev || ^3.0@dev",
        "nepada/template-factory": "^1.2@dev",

        "nette/application": "^2.4@dev || ^3.0@dev",
        "nette/component-model": "^2.3@dev || ^3.0@dev",
        "nette/reflection": "^2.4@dev || ^3.0@dev",
        "nette/neon": "^2.4@dev || ^3.0@dev",
        "nette/php-generator": "^2.4@dev || ^3.0@dev",
        "nette/caching": "^2.5@dev || ^3.0@dev",
        "nette/finder": "^2.4@dev || ^3.0@dev",
        "nette/http": "^2.4.0@dev || ^3.0@dev",
        "tracy/tracy": "^2.4.1@dev || ^3.0@dev"
    },
    "suggest": {
        "nette/di": "for integration with Nette DI container",
        "latte/latte": "to use Latte with custom Texy! macros in templates",
        "nepada/template-factory": "to automatically inject required services into Latte templates"
    },
    "autoload": {
        "psr-4": {
            "Nepada\\Bridges\\": "src/Bridges/",
            "Nepada\\Texy\\": "src/Texy/"
        },
        "classmap": [
            "src/Texy/exceptions.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
