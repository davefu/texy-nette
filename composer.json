{
    "name": "nepada/texy-nette",
    "type": "library",
    "license": "BSD-3-Clause",
    "description": "Texy integration for Nette.",
    "keywords": ["nette", "latte", "texy"],
    "support": {
        "email": "petr@pada.cz",
        "issues": "https://github.com/nepada/template-factory/issues"
    },
    "authors": [
        {
            "name": "Petr MorÃ¡vek",
            "email": "petr@pada.cz"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "nette/utils": "^2.4@dev || ^3.0@dev",
        "texy/texy": "^2.8@dev || ^3.0@dev"
    },
    "conflict": {
        "latte/latte": "<2.4"
    },
    "require-dev": {
        "nette/tester": "^2.1",
        "xificurk/phpstan-shim": "^0.11",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "nepada/coding-standard": "^6.0.0",
        "nette/bootstrap": "^2.4.1@dev || ^3.0@dev",
        "nette/di": "^2.4.10@dev || ^3.0@dev",
        "latte/latte": "^2.4@dev",
        "nepada/template-factory": "2.2.0@dev",
        "nette/http": "^2.4.7@dev || ^3.0@dev"
    },
    "suggest": {
        "nette/di": "for integration with Nette DI container",
        "latte/latte": "to use Latte with custom Texy! macros in templates",
        "nepada/template-factory": "to automatically inject required services into Latte templates"
    },
    "autoload": {
        "psr-4": {
            "Nepada\\Bridges\\": "src/Bridges/",
            "Nepada\\Texy\\": "src/Texy/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NepadaTests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.2-dev"
        }
    }
}
